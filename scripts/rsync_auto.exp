#!/usr/bin/expect -f

set timeout 300
set src [lindex $argv 0]
set dest [lindex $argv 1]
set password "1"

spawn rsync -av --delete $src $dest

expect {
    "password:" {
        send "$password\r"
        exp_continue
    }
    "yes/no" {
        send "yes\r"
        exp_continue
    }
    eof
}

catch wait result
exit [lindex $result 3]
